<Window
    x:Class="Games_Library.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Games_Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="720"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <DockPanel Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="900" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="10,0,0,0">
                <Border
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="0.6" />
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
            </Grid>

            <Image
                x:Name="img"
                Grid.RowSpan="2"
                Grid.Column="1"
                MaxWidth="200"
                MaxHeight="300"
                Margin="25,20,25,380" />

            <StackPanel
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="10,300,0,0">

                <StackPanel Orientation="Horizontal">
                    <Label
                        VerticalAlignment="Center"
                        Content="Name:"
                        FontWeight="Black" />
                    <TextBox
                        x:Name="textBoxName"
                        Width="280"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        IsReadOnly="True"
                        TextDecorations="None"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                        VerticalAlignment="Center"
                        Content="Genre:"
                        FontWeight="Black" />
                    <TextBox
                        x:Name="textBoxGenre"
                        Width="280"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        IsReadOnly="True"
                        TextDecorations="None"
                        TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label
                        VerticalAlignment="Center"
                        Content="Platform:"
                        FontWeight="Black" />
                    <TextBox
                        x:Name="textBoxPlatform"
                        Width="250"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        IsReadOnly="True"
                        TextDecorations="None"
                        TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label
                        VerticalAlignment="Center"
                        Content="Release Date:"
                        FontWeight="Black" />
                    <TextBox
                        x:Name="textRelease_Date"
                        Width="150"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        IsReadOnly="True"
                        TextDecorations="None" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label
                        VerticalAlignment="Center"
                        Content="Rating Score:"
                        FontWeight="Black" />
                    <TextBox
                        x:Name="textBoxRating_Score"
                        Width="100"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        IsReadOnly="True"
                        TextDecorations="None" />
                </StackPanel>

                <Label
                    VerticalAlignment="Center"
                    Content="Description:"
                    FontWeight="Black" />
                <TextBox
                    x:Name="textBlockDescription"
                    Width="325"
                    Margin="5,0,5,5"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    IsReadOnly="True"
                    TextDecorations="None"
                    TextWrapping="Wrap" />
            </StackPanel>

            <TextBox
                Name="searchFilter"
                Grid.Row="0"
                Grid.RowSpan="1"
                Margin="0,0,0,10"
                VerticalContentAlignment="Center"
                DockPanel.Dock="Top"
                TextChanged="searchFilter_TextChanged" />

            <ListView
                x:Name="ListViewGame"
                Grid.Row="1"
                Grid.RowSpan="1"
                SelectionChanged="Game_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="350" DisplayMemberBinding="{Binding Path=Name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="SortColumnHeader_Click" Tag="Name">Name</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="200" DisplayMemberBinding="{Binding Path=Genre}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="SortColumnHeader_Click" Tag="Genre">Genre</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="150" DisplayMemberBinding="{Binding Path=Platform}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="SortColumnHeader_Click" Tag="Platform">Platform</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=Release_Date}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="SortColumnHeader_Click" Tag="Release_Date">Release_Date</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=Rating_Score}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="SortColumnHeader_Click" Tag="Rating_Score">Rating Score</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </DockPanel>
</Window>
