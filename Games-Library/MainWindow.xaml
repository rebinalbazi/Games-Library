<Window
    x:Class="Games_Library.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Games_Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="720"
    mc:Ignorable="d">

    <DockPanel Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="900" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <TextBox
                Name="txtFilter"
                Grid.Row="0"
                Grid.RowSpan="1"
                Margin="0,0,0,10"
                DockPanel.Dock="Top"
                TextChanged="txtFilter_TextChanged" />
            <ListView
                x:Name="ListViewGame"
                Grid.Row="1"
                Grid.RowSpan="2"
                SelectionChanged="TheList_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="400" DisplayMemberBinding="{Binding Path=Name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="lvUsersColumnHeader_Click" Tag="Name">Name</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="150" DisplayMemberBinding="{Binding Path=Platform}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="lvUsersColumnHeader_Click" Tag="Platform">Platform</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="150" DisplayMemberBinding="{Binding Path=Release_Year}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="lvUsersColumnHeader_Click" Tag="Release_Year">Release_Year</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=Meta_Score}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="lvUsersColumnHeader_Click" Tag="Meta_Score">Meta_Score</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=User_Review}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Click="lvUsersColumnHeader_Click" Tag="User_Review">User_Review</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </DockPanel>
</Window>
